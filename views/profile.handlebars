<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a new song to your personal Jukebox:</h3>

    <form class="form new-song-form">
      <div class="form-group">
        <label for="song">song:</label>
        <input class="form-input" type="text" id="song" name="song" />
      </div>
      <div class="form-group">
        <label for="artist"> artist:</label>
        <input class="form-input" type="text" id="artist" name="artist" />
      </div>
      <div class="form-group">
        <label for="genre">genre:</label>
        <textarea class="form-input" id="genre" name="genre"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if songs.length}}
  <div class="col-md-6 song-list">
    <h3>Current songs in the jukebox</h3>

    {{#each songs as |song|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/song/{{song.id}}">{{song.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{song.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
